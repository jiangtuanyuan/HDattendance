<?xml version="1.0" encoding="utf-8"?><!-- 指纹管理 列表的item-->
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left_name"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@color/blue"
            android:gravity="center"
            android:text="嘿"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓            名 :" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/font_16_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="张 三" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所 属 小 组 :" />

                <TextView
                    android:id="@+id/tv_grouping"
                    style="@style/font_16_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="第一小组" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="指 纹 状 态 :" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="启 用"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 以下都是侧滑菜单的内容依序排列 -->

    <Button
        android:id="@+id/bt_disable"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_rectangle_gray_bg"
        android:text="禁用"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/bt_editor"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_rectangle_green_bg"
        android:text="编辑"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/bt_delete"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_rectangle_red_bg"
        android:text="删 除"
        android:textColor="@color/white" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
