<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_margin="4dp"
        android:background="@drawable/shape_rectangle_main_finger_bg">

        <ImageView
            android:id="@+id/iv_left_finger_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/main_finger_blue" />

        <ImageView
            android:id="@+id/iv_left_user_finger"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp" />

        <TextView
            android:id="@+id/tv_left_finger_state"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="启动异常!"
            android:textColor="@color/blue"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_center_left_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_daka_suees_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="打卡成功"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/tv_left_success_name"
            style="@style/MinDakaStyle"
            android:text="姓名:" />

        <TextView
            android:id="@+id/tv_left_success_shift"
            style="@style/MinDakaStyle"
            android:text="打卡班次:" />

        <TextView
            android:id="@+id/tv_left_success_state"
            style="@style/MinDakaStyle"
            android:text="打卡状态:" />

        <TextView
            android:id="@+id/tv_left_success_time"
            style="@style/MinDakaStyle"
            android:text="打卡时间:" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_center_left_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            style="@style/MinDakaStyle"
            android:layout_width="200dp"
            android:gravity="center"
            android:text="今日打卡记录" />

        <TextView
            android:id="@+id/tv_left_log_name"
            style="@style/MinDakaStyle"
            android:layout_width="200dp"
            android:text="姓名: " />

        <TextView
            android:id="@+id/tv_left_log_morning_start"
            style="@style/MinDakaStyle"
            android:layout_width="200dp"
            android:text="上午上班:" />

        <TextView
            android:id="@+id/tv_left_log_morning_end"
            style="@style/MinDakaStyle"
            android:layout_width="200dp"
            android:text="上午下班:" />

        <TextView
            android:id="@+id/tv_left_log_afternoon_start"
            style="@style/MinDakaStyle"
            android:layout_width="200dp"
            android:text="下午上班:" />

        <TextView
            android:id="@+id/tv_left_log_afternoon_end"
            style="@style/MinDakaStyle"
            android:layout_width="200dp"
            android:text="下午下班:" />
    </LinearLayout>

</LinearLayout>
