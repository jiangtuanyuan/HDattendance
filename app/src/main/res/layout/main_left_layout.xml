<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="考  勤  打 卡 "
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray_q"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_letf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginBottom="80dp"
                android:gravity="center"
                android:text="下午上班时间,禁止打卡!"
                android:textColor="@color/red"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_main_finger" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text=" 考 勤 打 卡 请 轻 触 左 边 指 纹 仪 !"
                android:textColor="@color/blue"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"

            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_left_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_daka_suess_svg" />

                <TextView
                    android:id="@+id/tv_left_name"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/blue"
                    android:gravity="left|center_vertical"
                    android:text="   姓            名 : "
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_left_atten_type"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:background="@color/blue"
                    android:gravity="left|center_vertical"
                    android:text="   打 卡 类 型 :  "
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_left_atten_time"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:background="@color/blue"
                    android:gravity="left|center_vertical"
                    android:text="   打 卡 时 间 :   "
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="打卡成功！"
                    android:textColor="@color/green" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_left_layout_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_left_info_top"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:text="今日打卡记录"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_atten_morning_start"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:gravity="left|center_vertical"
                    android:text="  上午上班卡: "
                    android:textColor="@color/green"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_atten_morning_end"
                    android:layout_width="200dp"
                    android:layout_height="53dp"
                    android:layout_margin="2dp"
                    android:gravity="left|center_vertical"
                    android:text="  上午下班卡:"
                    android:textColor="@color/red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_atten_afternoon_start"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:gravity="left|center_vertical"
                    android:text="  下午上班卡: "
                    android:textColor="@color/green"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_atten_afternoon_end"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:gravity="left|center_vertical"
                    android:text="  下午下班卡: "
                    android:textColor="@color/red"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
