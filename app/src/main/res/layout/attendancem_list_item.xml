<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/gray_q"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tv_top_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_shangla" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_data_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:background="@color/blue"
                android:gravity="center"
                android:text="上 午"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_q"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="上  班"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_morning_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="打卡时间:  00:00"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_morning_start_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="状        态:  正常打卡"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_morning_start_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="备注内容:  无"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="下  班"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_morning_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="打卡时间:  2018-10-20 18:17"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_morning_end_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="状        态:  补卡"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_morning_end_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="备注内容:  无"
                    android:textSize="16sp" />


            </LinearLayout>


            <TextView
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:background="@color/yellb"
                android:gravity="center"
                android:text="下 午"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_q"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="上  班"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_afternoon_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="打卡时间:  无"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_afternoon_start_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="状        态:  未打卡"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_afternoon_start_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="备注内容:  无"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="下  班"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_afternoon_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="打卡时间:  18:15"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_afternoon_end_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="状        态:  正常打卡"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_afternoon_end_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="备注内容:  无"
                    android:textSize="16sp" />


            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/gray_q"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="其  它"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_isDeductions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="扣款情况:  无"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_Deductions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="扣款金额:  无"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_deductionsInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:singleLine="false"
            android:text="扣款说明: 无"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_editor_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="false"
            android:text="编 辑 "
            android:textColor="@color/blue"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>
